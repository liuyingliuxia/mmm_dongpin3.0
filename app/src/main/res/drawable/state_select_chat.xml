<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" >
        <shape android:shape="rectangle" >
            <solid android:color="@color/color1" />
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="0dp" android:topLeftRadius="3dp" android:topRightRadius="0dp"></corners>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <stroke android:width="0.8dp" android:color="@color/color_main" />
            <solid android:color="@color/color_pure_white" />
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="0dp" android:topLeftRadius="3dp" android:topRightRadius="0dp"></corners>
        </shape>

    </item>

</selector>