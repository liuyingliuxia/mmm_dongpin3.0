<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/color_pure_white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_margin="@dimen/mmm_font_s10"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/mmm_new2" />

            <LinearLayout
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mmm_hint_title"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/mmm_number"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/tvPageView"
                    android:layout_marginLeft="130dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mmm_number"
                    android:drawablePadding="@dimen/mmm_font_s10"
                    android:drawableLeft="@drawable/see"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_margin="6dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/new1" />

    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/mmm_font_s10"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginLeft="@dimen/mmm_font_s10"
        android:background="@color/color_cut_off_line"/>

</LinearLayout>