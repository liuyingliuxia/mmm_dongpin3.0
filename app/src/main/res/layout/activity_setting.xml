<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:theme="@style/AppTheme.NoActionBar"
    android:layout_height="match_parent">

    <FrameLayout
        style="?attr/tts_bg"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="@color/color_main">

        <ImageView
            android:id="@+id/ivBack"
            style="?attr/tts_title_leftImg"
            android:src="@drawable/back_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"/>

        <TextView
            style="?attr/tts_title_txt"
            android:layout_marginTop="@dimen/mmm_font_s10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_pure_white"
            android:textSize="@dimen/mmm_font_s16"
            android:text="@string/mmm_setting"/>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/mmm_font_s10"
        android:layout_marginRight="@dimen/mmm_font_s10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/mmm_font_s16"
            android:textColor="@color/color_textcolor"
            android:text="@string/mmm_account_security" />

        <ImageView
            android:src="@drawable/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@null"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="0.6dp"
        android:background="@color/color_hint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/mmm_font_s10"
        android:layout_marginRight="@dimen/mmm_font_s10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/mmm_font_s16"
            android:textColor="@color/color_textcolor"
            android:text="@string/mmm_push_message_set" />

        <ImageView
            android:src="@drawable/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@null"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="0.6dp"
        android:background="@color/color_hint"/>

    <LinearLayout
        android:id="@+id/llAboutUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/mmm_font_s10"
        android:layout_marginRight="@dimen/mmm_font_s10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/mmm_font_s16"
            android:textColor="@color/color_textcolor"
            android:text="@string/mmm_about_us" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/mmm_now_copy_right"/>

        <ImageView
            android:src="@drawable/arrow_right"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/mmm_font_s12"
            android:layout_height="20dp"
            android:background="@null"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="0.6dp"
        android:background="@color/color_hint"/>

    <LinearLayout
        android:id="@+id/llClearCache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/mmm_font_s10"
        android:layout_marginRight="@dimen/mmm_font_s10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvClearCache"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/mmm_font_s16"
            android:textColor="@color/color_textcolor"
            android:text="@string/mmm_clear_cache" />

        <TextView
            android:id="@+id/ivCache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_textcolor"
            android:text="@string/mmm_KB"/>

        <ImageView
            android:src="@drawable/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/mmm_font_s12"
            android:background="@null"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="0.6dp"
        android:background="@color/color_hint"/>

    <Button
        android:id="@+id/btnQuitLogin"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_marginLeft="@dimen/mmm_font_s16"
        android:layout_marginRight="@dimen/mmm_font_s16"
        android:paddingBottom="20dp"
        android:text="@string/mmm_quit_login"
        android:textSize="@dimen/mmm_font_s16"/>

</LinearLayout>