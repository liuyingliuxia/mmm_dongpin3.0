<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.itcast.mydongpin3.ui.sort.ProductSortActivity">
<!--   标题栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_main"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/back_1"/>

        <TextView
            android:id="@+id/tvSort"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_pure_white"
            android:gravity="center"
            android:layout_marginRight="@dimen/mmm_font_s10"
            android:textSize="@dimen/mmm_font_s16"
            android:text="@string/mmm_product_sort"/>

        <TextView
            android:id="@+id/tvMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/mmm_font_s10"
            android:layout_marginRight="@dimen/mmm_font_s10"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_pure_white"
            android:drawableTop="@drawable/merchant_ic_more_def"
            android:textSize="@dimen/mmm_font_s12"
            android:text="@string/mmm_more"/>

    </LinearLayout>

<!--    全部产品-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/mmm_font_s16"
        android:paddingBottom="@dimen/mmm_font_s16"
        android:paddingLeft="@dimen/mmm_font_s10"
        android:paddingRight="@dimen/mmm_font_s10"
        android:background="@color/color_pure_white">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/all"
            android:padding="8dp"
            android:background="@drawable/state_all_bg"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/mmm_font_s16"
            android:textColor="@color/color_textcolor"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/mmm_font_s10"
            android:text="@string/mmm_all_product"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            android:padding="@dimen/mmm_font_s10"
            android:layout_gravity="center"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"/>

<!--促销产品-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/mmm_font_s16"
        android:paddingBottom="@dimen/mmm_font_s16"
        android:paddingLeft="@dimen/mmm_font_s10"
        android:paddingRight="@dimen/mmm_font_s10"
        android:background="@color/color_pure_white">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/for_sale" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/mmm_font_s16"
            android:textColor="@color/color_textcolor"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/mmm_font_s10"
            android:text="@string/mmm_sale_product"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            android:padding="@dimen/mmm_font_s10"
            android:layout_gravity="center"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

<!--    新品推荐-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/mmm_font_s16"
        android:paddingBottom="@dimen/mmm_font_s16"
        android:paddingLeft="@dimen/mmm_font_s10"
        android:paddingRight="@dimen/mmm_font_s10"
        android:background="@color/color_pure_white">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/new_product"
            android:padding="8dp"
            android:background="@drawable/state_new"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/mmm_font_s16"
            android:textColor="@color/color_textcolor"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/mmm_font_s10"
            android:text="@string/mmm_new_product_recommend"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            android:padding="@dimen/mmm_font_s10"
            android:layout_gravity="center"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

<!--    热销产品-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/mmm_font_s16"
        android:paddingBottom="@dimen/mmm_font_s16"
        android:paddingLeft="@dimen/mmm_font_s10"
        android:paddingRight="@dimen/mmm_font_s10"
        android:background="@color/color_pure_white">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/hot" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/mmm_font_s16"
            android:textColor="@color/color_textcolor"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/mmm_font_s10"
            android:text="@string/mmm_hot"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            android:padding="@dimen/mmm_font_s10"
            android:layout_gravity="center"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/mmm_font_s10"
            android:background="@color/color_pure_white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mmm_shop_name1"
                android:textColor="@color/color_textcolor"
                android:textSize="@dimen/mmm_font_s16"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/mmm_font_s12"
                android:text="@string/mmm_look_all" />

        </LinearLayout>

        <View
            android:background="@color/color_background"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/mmm_font_s10"
            android:layout_height="1dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_pure_white"
        android:paddingLeft="@dimen/mmm_font_s16"
        android:paddingRight="@dimen/mmm_font_s16"
        android:rowCount="3"
        android:columnCount="2">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mmm_font_s10"
            android:layout_marginLeft="@dimen/mmm_font_s10"
            android:textSize="@dimen/mmm_font_s12"
            android:background="@drawable/state_item_bg"
            android:gravity="center"
            android:text="@string/mmm_sort1"
            android:paddingTop="@dimen/mmm_font_s10"
            android:paddingBottom="@dimen/mmm_font_s10" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mmm_font_s10"
            android:layout_marginLeft="@dimen/mmm_font_s10"
            android:textSize="@dimen/mmm_font_s12"
            android:background="@drawable/state_item_bg"
            android:text="@string/mmm_sort3"
            android:gravity="center"
            android:paddingTop="@dimen/mmm_font_s10"
            android:paddingBottom="@dimen/mmm_font_s10" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mmm_font_s10"
            android:layout_marginLeft="@dimen/mmm_font_s10"
            android:textSize="@dimen/mmm_font_s12"
            android:background="@drawable/state_item_bg"
            android:text="@string/mmm_sort5"
            android:gravity="center"
            android:paddingTop="@dimen/mmm_font_s10"
            android:paddingBottom="@dimen/mmm_font_s10" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mmm_font_s10"
            android:layout_marginLeft="@dimen/mmm_font_s10"
            android:textSize="@dimen/mmm_font_s12"
            android:background="@drawable/state_item_bg"
            android:text="@string/mmm_sort2"
            android:gravity="center"
            android:paddingTop="@dimen/mmm_font_s10"
            android:paddingBottom="@dimen/mmm_font_s10" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mmm_font_s10"
            android:layout_marginLeft="@dimen/mmm_font_s10"
            android:textSize="@dimen/mmm_font_s12"
            android:background="@drawable/state_item_bg"
            android:text="@string/mmm_sort4"
            android:gravity="center"
            android:paddingTop="@dimen/mmm_font_s10"
            android:paddingBottom="@dimen/mmm_font_s10" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mmm_font_s10"
            android:layout_marginLeft="@dimen/mmm_font_s10"
            android:textSize="@dimen/mmm_font_s12"
            android:background="@drawable/state_item_bg"
            android:text="@string/mmm_sort6"
            android:gravity="center"
            android:paddingTop="@dimen/mmm_font_s10"
            android:paddingBottom="@dimen/mmm_font_s10" />

    </GridLayout>

</LinearLayout>

