<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/AppTheme.NoActionBar"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <FrameLayout
       style="?attr/tts_bg"
       android:layout_width="match_parent"
       android:layout_height="42dp"
       android:orientation="horizontal"
       android:background="@color/color_main">

       <ImageView
           android:id="@+id/ivBack"
           style="?attr/tts_title_leftImg"
           android:src="@drawable/back_1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="10dp"/>

       <TextView
           style="?attr/tts_title_txt"
           android:layout_marginLeft="100dp"
           android:layout_marginTop="@dimen/mmm_font_s10"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:textColor="@color/color_pure_white"
           android:textSize="@dimen/mmm_font_s16"
           android:text="@string/mmm_about_us"/>

   </FrameLayout>

    <ImageView
        android:id="@+id/ivQR"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/active_suspend" />

    <TextView
        android:id="@+id/tvVersion"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="V 0.2.3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="60dp"
        android:background="@color/color_hint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/mmm_font_s10"
        android:layout_marginRight="@dimen/mmm_font_s10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPrivate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textColor="@color/color_textcolor"
            android:text="@string/mmm_private" />

        <ImageView
            android:src="@drawable/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@null"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/color_hint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mmm_font_s10"
        android:layout_marginRight="@dimen/mmm_font_s10"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user_protocol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_textcolor"
            android:textSize="20dp"

            android:text="@string/mmm_user_protocol2" />

        <ImageView
            android:src="@drawable/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@null"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/color_hint"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mmm_font_s10"
        android:layout_marginRight="@dimen/mmm_font_s10"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_service_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textColor="@color/color_textcolor"
            android:text="@string/mmm_official_service" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/color_textcolor"
            android:text="@string/mmm_service_phone"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/mmm_font_s10"
            android:background="@null"
            android:src="@drawable/set_ic_phone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/color_hint"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="30dp"
        android:textSize="13dp"
        android:text="@string/mmm_copy_right"/>

</LinearLayout>